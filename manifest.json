{
    "name": "nCage+",
    "options_page": "options.html",
    "permissions": ["storage"],
    "description": "Prank your friends and co-workers with this extension that will replace their webpage images as they browse the internet!",
    "version": "1.0.1",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": ["css/style.css"],
            "js": [
                "ncageImages.js",
                "rubberDuckImages.js",
                "animeGirlImages.js",
                "defaultOptions.js",
                "image_replacer.js"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": { 
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
